<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sleepPage">

    <Button
        android:id="@+id/backBtnSleep"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/purple_200"
        android:drawableLeft="@drawable/ic_back"
        android:onClick="toSecondaryPage"
        android:text="Back" />

    <TextView
        android:id="@+id/instructionsSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backBtnSleep"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Enter hours of sleep you got last night: "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/sleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionsSleep"
        android:layout_marginTop="50dp"
        android:hint="# of hours"
        android:inputType="number" />

    <Button
        android:id="@+id/saveSleep"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_below="@+id/sleep"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/orange"
        android:onClick="saveSleep"
        android:text="Save Data" />

</RelativeLayout>